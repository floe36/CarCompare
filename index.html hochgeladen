<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f6f6f6;
    margin: 0; padding: 0;
  }
  .container {
    max-width: 900px;
    margin: 40px auto;
    background: white;
    padding: 20px;
    box-shadow: 0 0 10px #ccc;
  }
  h1, h2 {
    text-align: center;
  }
  .select-section {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 20px;
  }
  .car-select select {
    display: block;
    margin-top: 10px;
    width: 180px;
    padding: 8px;
  }
  button {
    display: block;
    margin: auto;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
  }
  .result {
    margin-top: 30px;
    padding: 20px;
    border-top: 1px solid #ccc;
  }
  .error {
    color: red;
    text-align: center;
  }
</style>
